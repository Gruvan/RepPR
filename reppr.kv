#: import main RepPR
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton


<RepPRLayout>:
    orientation: "vertical"   
    canvas.before:
        Color:
            #rgba: 1, 1, 1, 1
            rgba: hex('#96d66b')
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        Image:
            source: 'logo.png'
            keep_ratio: True
            allow_stretch: True
            opacity: 1
            size_hint: 0.9, 0.9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    BoxLayout:
        Button:
            text: "Uppdatera sortering"
            default_size: None, dp(30)
            default_size_hint: 1, None
            size_hint_y: None
            #padding: dp(10)
            padding_y: 100
            padding_x: 100

        Button:
            text: "Editera rekord"
            default_size: None, dp(30)
            default_size_hint: 1, None
            size_hint_y: None

    RV:    
        viewclass: 'Button'
        RecycleBoxLayout:
            default_size: None, dp(30)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            id: rv
          
 

   